INDEXER_NETWORK=sepolia

# Sepolia endpoints (replace with your own provider URLs)
ETH_RPC_HTTP_URL=https://sepolia.infura.io/v3/YOUR_KEY
ETH_RPC_WS_URL=wss://sepolia.infura.io/ws/v3/YOUR_KEY
ETH_RPC_TIMEOUT=15s

# Postgres
PG_DSN=postgres://postgres:postgres@127.0.0.1:5432/hotwallet?sslmode=disable

# Redis
REDIS_ADDR=127.0.0.1:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_STREAM_KEY=blocks:raw
REDIS_STREAM_MAXLEN=100000

# Sync
START_BLOCK=0
SYNC_BATCH_SIZE=20
CONFIRMATIONS=0

